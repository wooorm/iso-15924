{
  "name": "iso-15924",
  "version": "2.4.0",
  "description": "ISO 15924 codes in an accessible format",
  "license": "MIT",
  "keywords": [
    "iso-15924",
    "iso",
    "15924",
    "list",
    "script",
    "codes",
    "names",
    "information"
  ],
  "repository": "wooorm/iso-15924",
  "bugs": "https://github.com/wooorm/iso-15924/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "index.json",
  "files": [
    "index.json"
  ],
  "devDependencies": {
    "bail": "^1.0.0",
    "browserify": "^17.0.0",
    "concat-stream": "^2.0.0",
    "d3-dsv": "^2.0.0",
    "not": "^0.1.0",
    "prettier": "^2.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "tinyify": "^3.0.0",
    "xo": "^0.38.0",
    "yauzl": "^2.0.0"
  },
  "scripts": {
    "generate": "node build",
    "format": "remark . -qfo && prettier . --write && xo --fix",
    "build-bundle": "browserify index.json -s iso15924 -o iso-15924.js",
    "build-mangle": "browserify index.json -s iso15924 -p tinyify -o iso-15924.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test": "npm run generate && npm run format && npm run build && npm run test-api"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/no-fn-reference-in-iterator": "off"
    },
    "ignores": [
      "iso-15924.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
